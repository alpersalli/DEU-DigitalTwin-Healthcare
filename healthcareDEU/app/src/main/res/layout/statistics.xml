<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A448B5E6"
    android:backgroundTint="#A448B5E6">


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="647dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="93dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView42"
                android:layout_width="222dp"
                android:layout_height="23dp"
                android:layout_marginStart="19dp"
                android:layout_marginTop="800dp"
                android:layout_marginEnd="152dp"
                android:layout_marginBottom="119dp"
                android:text="BMI" />

            <TextView
                android:id="@+id/textView41"
                android:layout_width="213dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="550dp"
                android:layout_marginEnd="160dp"
                android:layout_marginBottom="411dp"
                android:text="Steps" />

            <TextView
                android:id="@+id/textView40"
                android:layout_width="151dp"
                android:layout_height="22dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="82dp"
                android:layout_marginEnd="220dp"
                android:layout_marginBottom="700dp"
                android:text="Weight" />

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/progress_circular"
                android:layout_width="196dp"
                android:layout_height="185dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="76dp"
                android:layout_marginTop="578dp"
                app:cpb_background_progressbar_color="#b6bbd8"
                app:cpb_background_progressbar_width="5dp"
                app:cpb_progressbar_color="#3f51b5"
                app:cpb_progressbar_width="10dp" />

            <TextView
                android:id="@+id/currentStepCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="624dp"
                android:layout_marginEnd="150dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/stepCountGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="684dp"
                android:layout_marginEnd="151dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewBmi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="847dp"
                android:layout_marginEnd="169dp"
                android:text="BMI" />

            <TextView
                android:id="@+id/textViewWeight"
                android:layout_width="252dp"
                android:layout_height="189dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="137dp"
                android:layout_marginEnd="54dp"
                android:text="TextView" />

        </RelativeLayout>


    </ScrollView>

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Name" />


    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="-19dp"
        app:backgroundTint="#C939A1CF" />

    <ImageView
        android:id="@+id/statisticsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="315dp"
        android:layout_marginBottom="13dp"
        app:srcCompat="@android:drawable/btn_star" />

    <ImageView
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@android:drawable/ic_menu_myplaces"
        app:tint="#0C0C0C" />

    <ImageView
        android:id="@+id/notificationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="192dp"
        android:layout_marginBottom="12dp"
        app:srcCompat="@android:drawable/ic_popup_reminder" />


</RelativeLayout>